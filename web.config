<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Indicates that the iisnode module is enabled -->
    <webSocket enabled="false" />
    <iisnode nodeProcessCommandLine="&quot;%PROGRAM_FILES%\nodejs\node.exe&quot;" />

    <rewrite>
      <rules>
        <rule name="app">
          <match url="^app\.js$|^.*\.js$|^.*\.json$|^.*\.html?$" negate="true" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/" />
        </rule>
      </rules>
    </rewrite>

    <!-- 'bin' directory has 'Full' permissions -->
    <directoryBrowse enabled="false" />

    <!-- Logging and diagnostics -->
    <iisnode loggingEnabled="true" logDirectory="iisnode" debuggingEnabled="false" />
  </system.webServer>

  <!-- ============= IMPORTANT ============= -->
  <!-- NPM install MUST run before the app starts -->
  <!-- This is handled via .deployment file and deploy.sh script -->
  <!-- ====================================== -->
</configuration>
